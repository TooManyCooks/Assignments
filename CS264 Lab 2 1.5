#include <iostream>

using namespace std;

void print_string_array(char str[]){
    int counter = 0;
    while (str[counter]!='\0'){
        cout << str[counter];
        counter++;
    }
    cout << endl;
}

void print_string_ptr(char *str){
    for(int i = 0; str[i]; i++){
        cout << str[i]; 
    }
}

int main()
{
    char myString[5] = "Jake";
    
    cout << "Printing by array : ";
    print_string_array(myString);
    
    cout << "Printing by pointer : ";
    print_string_ptr(myString);

    return 0;
}
