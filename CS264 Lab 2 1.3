#include <iostream>
#include <stdlib.h>
#include <cstdlib>

const int ARRAYSIZE = 11;

int roll() {
    int random = (rand() % ARRAYSIZE) + 2;
    return random;
}

using namespace std;

int main() {
    
    int occurenceArray[ARRAYSIZE];
    fill_n(occurenceArray, ARRAYSIZE, 0);
 
    srand(time(0));
    cout << "How many times would you like to roll? : ";
    int rollNumber = 0;
    cin >> rollNumber;
    
    int sum = 0;
    for (int i = 0; i < rollNumber; i++) {
        sum = roll();
        occurenceArray[sum - 2]++;
    }
 
    cout << "Occurrences in percentage: \n";
    
    double percentage = 0.0;
    for (int i = 0; i < ARRAYSIZE; i++) {
        percentage = (occurenceArray[i]) * (100 / rollNumber);
        cout << "Occurrences of " << (i + 2) << " = " << percentage << "%" << endl;
    }
}
