#include <iostream>

int main()
{
    using namespace std;
    
    float x, y, z;
    cin >> x >> y >> z;
    
    cout << "Sum = " << x+y+z << endl;
    cout << "Average = " << (x+y+z)/3 << endl;
    cout << "Product = " << x*y*z << endl;
    
    float smallest;
    if(x<y && x<z){
        smallest = x;
    }else if(y<z && y<x){
        smallest = y;
    }else{
        smallest = z;
    }
    cout << "Smallest = " << smallest << endl;
    
    float largest;
    if(x>y && x>z){
        largest = x;
    }else if(y>z && y>x){
        largest = y;
    }else{
        largest = z;
    }
    cout << "Largest = " << largest << endl;
    
    return 0;
}
