#include <iostream>
#include <math.h>

using namespace std;

bool isPrime(int inData)
{
    if(inData == 1){
        cout << "1 is neither a prime nor none-prime number" << endl;
        return false;
    }
    else if (inData == 2){
        return true;
    }

    int checkRange = (int) (sqrt(inData * 1.0) + 1);

    for(int i = 2; i < checkRange; i++){
        if(inData % i == 0){
            return false;
        }
    }

    return true;
}

int main()
{

    for(int i = 1; i < 5000; i++){
        if(isPrime(i)){
            cout << i << " is a prime number " << endl;
        }
    }
    return 0;
}
